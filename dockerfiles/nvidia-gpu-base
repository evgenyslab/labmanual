FROM nvidia/cuda:10.2-base-ubuntu18.04

RUN apt-get update \
&& DEBIAN_FRONTEND=noninteractive apt-get install -y ssh \
    build-essential \
    gcc \
    g++ \
    gdb \
    git \
    clang \
    cmake \
    rsync \
    tar \
    python \
    python-pip \
    python3-pip \
&& apt-get clean


# Update pip:
RUN pip install --upgrade pip && \
    pip3 install --upgrade pip

RUN pip3 install numpy ipython torch torchvision jupyterlab

WORKDIR /tmp

